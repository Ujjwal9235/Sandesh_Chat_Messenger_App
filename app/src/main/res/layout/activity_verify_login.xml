<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pageshape">

    <EditText
        android:id="@+id/email_edittext_verify_login"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingLeft="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/password_edittext_verify_login"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:hint="Password"
        android:paddingLeft="20dp"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/email_edittext_verify_login"
        app:layout_constraintStart_toStartOf="@+id/email_edittext_verify_login"
        app:layout_constraintTop_toBottomOf="@+id/email_edittext_verify_login" />

    <Button
        android:id="@+id/login_button_verify_login"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="32dp"
        android:text="Login"
        android:background="@drawable/shape"
        app:layout_constraintEnd_toEndOf="@+id/password_edittext_verify_login"
        app:layout_constraintStart_toStartOf="@+id/password_edittext_verify_login"
        app:layout_constraintTop_toBottomOf="@+id/password_edittext_verify_login" />

    <TextView
        android:id="@+id/back_to_register_text_verify_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Back to Register."
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/login_button_verify_login"
        app:layout_constraintStart_toStartOf="@+id/login_button_verify_login"
        app:layout_constraintTop_toBottomOf="@+id/login_button_verify_login" />


</androidx.constraintlayout.widget.ConstraintLayout>